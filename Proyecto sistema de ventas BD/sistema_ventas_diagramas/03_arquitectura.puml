skinparam componentStyle rectangle
title Arquitectura General (Capas)

rectangle "Presentación" as UI {
  [Vistas PHP / HTML] as Vistas
}

rectangle "Lógica de Negocio" as BL {
  [Controladores] as Ctrl
  [Servicios] as Svc
  [Repositorios] as Repo
}

